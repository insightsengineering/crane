Package: crane
Title: Supplements 'gtsummary' for Pharmaceutical Reporting
Version: 0.0.0.9014
Authors@R: c(
    person("Daniel D.", "Sjoberg", , "danield.sjoberg@gmail.com", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0003-0862-2018")),
